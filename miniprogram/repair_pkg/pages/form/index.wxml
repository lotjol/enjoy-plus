<scroll-view enhanced show-scrollbar="{{false}}" scroll-y>
  <view class="form">
    <van-cell-group border="{{false}}" title="报修房屋">
      <van-cell title="北京西三旗花园1号楼 101" bind:click="selectHouse" is-link border="{{false}}" />
    </van-cell-group>
    <van-cell-group border="{{false}}" title="报修信息">
      <van-cell title-width="100" title="维修项目" bind:click="selectRepairItem" value="请选择" is-link />
      <van-field title-width="88" label="手机号码" placeholder="请输入联系电话号码" />
      <van-cell title-width="100" title="预约日期" bind:click="selectDate" is-link value="请选择上门维修日期" />
      <van-cell use-label-slot title="问题描述">
        <van-field slot="label" border="{{false}}" autosize custom-style="padding: 0; font-size: 28rpx; min-height: 60rpx" type="textarea" placeholder-style="color: #c3c3c5;" placeholder="请填写报修内容，工作人员将快速帮您解决问题。" />
      </van-cell>
      <van-cell use-label-slot custom-style="padding-bottom: 0" title="问题附件" border="{{false}}">
        <view class="uploader" slot="label" style="margin-top: 20rpx;">
          <van-uploader preview-size="100" file-list="{{ fileList }}" />
        </view>
      </van-cell>
    </van-cell-group>
  </view>
</scroll-view>

<view class="toolbar" bind:tap="goList">
  <text class="enjoy-icon icon-repair"></text>
  <text class="button-text">提交报修</text>
</view>

<van-action-sheet bind:close="closeHouseLayer" bind:cancel="closeHouseLayer" round show="{{ houseLayerVisible }}" actions="{{ houseList }}" cancel-text="取消" title="选择报修房屋" />

<van-action-sheet bind:close="closeRepairLayer" bind:cancel="closeRepairLayer" round show="{{ repairLayerVisible }}" actions="{{ repairItem }}" cancel-text="取消" title="选择维修项目" />

<van-popup bind:close="closeDateLayer" round show="{{ dateLayerVisible }}" position="bottom">
  <van-datetime-picker type="date" value="{{ currentDate }}" min-date="{{ '2022-08-10' }}" />
</van-popup>